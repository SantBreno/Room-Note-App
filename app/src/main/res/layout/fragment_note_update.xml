<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_solid"
        tools:context=".ui.note.update.NoteUpdateFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_note_update"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white_solid"
                app:menu="@menu/menu_top_note_update"
                app:navigationIcon="@drawable/ic_back_arrow"
                app:navigationIconTint="@color/opera_blue"/>



        </com.google.android.material.appbar.AppBarLayout>


        <EditText
            android:id="@+id/et_note_update_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:autofillHints=""
            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/bitter_bold"
            android:hint="@string/title_note_hint"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/opera_blue"
            android:textSize="18sp"
            app:layout_constraintEnd_ToEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal="0.0"
            app:layout_constraintStart_ToStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

        <EditText
            android:id="@+id/et_note_update_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:alpha="0.5"
            android:autofillHints=""
            android:background="@null"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:lineSpacingMultiplier="1.5"
            android:paddingHorizontal="8dp"
            android:hint="@string/note_content_hint"
            android:textColor="@color/opera_blue"
            android:textSize="14sp"
            android:fontFamily="@font/baloo_semibold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_note_update_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>